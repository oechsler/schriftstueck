\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{style/headers}[Fancy headers for Schrifstueck]

\usepackage{fancyhdr}

% Geometry configuration
%--------------------------------------
\usepackage[
    top=3.8cm,
    right=2.5cm,
    left=2.5cm,
    headsep=0.8cm,
]{geometry}
%--------------------------------------

% Fancyhdr configuration
%--------------------------------------
\renewcommand{\chaptermark}[1]{\markboth{#1}{#1}}

\pagestyle{fancy}
\renewcommand{\headrulewidth}{0pt}

\fancyhf{}

\lhead{\textsl{\MakeUppercase{\chaptername\ \thechapter\ --\ \leftmark}}}
\rhead{\thepage}
\lfoot{}
\rfoot{}
